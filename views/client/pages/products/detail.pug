extends ../../layouts/default.pug


block main 
	if product.title
		h2.mb-4 
			| Sản phẩm: 
			b #{product.title}
	if product.price
		h2.mb-4 
			| Giá: 
			b #{product.price}
	if product.discountPercentage
		h2.mb-4 
			| Giảm giá: 
			b #{product.discountPercentage}%
	if product.stock
		h2.mb-4 
			| Còn lại: 
			b #{product.stock}
	if product.thumbnail
		div.mb-4
			img(src=product.thumbnail style="width:100px")
	if product.description
		h2.mb-4 
			| Mô tả: 
			span #{product.description}

