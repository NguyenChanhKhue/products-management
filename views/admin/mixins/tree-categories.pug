mixin tree-categories(records, level = 1 , parent_id="")
  each item in records
    - const prefix = Array(level + 1).join(" -- ")
    option(
      value=item._id
      selected=(item._id == parent_id ? true : false)
      ) #{prefix}#{item.title}
    if item.children && item.children.length > 0
      +tree-categories(item.children, level + 1 , parent_id)