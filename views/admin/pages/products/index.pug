extends ../../layouts/default.pug
include ../../mixins/button-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug

block main 
  h1 Danh sách sản phẩm

  card.mb-3 
    .card-header Lọc và Tìm kiếm 
    .card-body
      .row 
        .col-6
          +button-status(fillterStatus)
        .col-6 
          +search(keyword)
  card.mb-3 
    .card-header Tính năng 
    .card-body
      .row 
        .col-4 
          a(href=`${prefixAdmin}/products/create` class="btn btn-primary") + Thêm sản phẩm mới
  card.mb-3 
    .card-body
      table.table 
        thead 
          tr 
            th STT
            th Hình ảnh
            th Tiêu đề
            th Giá
            th Vị trí
            th Trạng thái
            th Hành động
        
        tbody
          each item , index in products 
            tr 
              td #{index+1}
              td
                img(src=item.thumbnail
                alt=item.title
                width="100px"
                height="auto"
                )
                
              td #{item.title}
              td #{item.price}$
              td
                input(
                  type="number"
                  value= item.position
                  style="width: 60px"
                  min = 1
                  name="position"
                  )
              td 
                if(item.status == "active")
                  a( 
                    href="javascript:;" 
                    data-status=item.status
                    data-id = item.id
                    button-change-status
                    class="badge badge-success"

                    )  Hoạt động
                else 
                  a(
                    href="javascript:;"
                    data-status=item.status
                    data-id = item.id
                    button-change-status
                    class="badge badge-danger"
                    ) Dừng hoạt động 
                
              td
                a(
                  href=`${prefixAdmin}/products/detail/${item.id}`
                  class="btn btn-secondary"
                  style="margin-right:10px"                 
                  ) Chi tiết
                a(
                  href=`${prefixAdmin}/products/edit/${item.id}`
                  class="btn btn-warning"
                  style="margin-right:10px"                 
                  ) Sửa
                button(class="btn btn-danger" 
                      button-delete
                      data-id = item.id) Xoá
  +pagination(pagination)

  form(
    action=""
    method="POST"
    id="form-change-status"
    data-path= `${prefixAdmin}/products/change-status`
    ) 


  form(
    action=""
    method="POST"
    id="form-delete-item"
    data-path= `${prefixAdmin}/products/delete`
    ) 
  script(src="/admin/js/product.js") 