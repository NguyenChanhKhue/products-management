extends ../../layouts/default.pug
include ../../mixins/tree-categories.pug

block main 
    h1(class="mb-4") Thêm mới sản phẩm 
    form(
        action=`${prefixAdmin}/products/create`
        id="form-create-product"
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
          lable(for="title") Tiêu đề
          input(
            type="text"
            class="form-control"
            id="title"
            name="title"
            required
          )
        div(class="form-group")
          label(for="product_category_id") Chọn danh mục
          select(
            name="product_category_id"
            id="product_category_id"
            class="form-control"
          )
            option(
              value=""
            ) -- Danh mục--
            if(records)
              +tree-categories(records)
        div(class="form-group")
          lable(for="desc") Mô tả
          textarea(
            type="text"
            class="form-control textarea-mce"
            id="desc"
            name="description"
          )
        div(class="form-group")
          lable(for="price") Giá
          input(
            type="number"
            class="form-control"
            id="price"
            name="price"
            value="0"
          )
        div(class="form-group")
          lable(for="discount") % Giảm giá
          input(
            type="text"
            class="form-control"
            id="discount"
            name="discountPercentage"
            value="0"
          ) 
        div(class="form-group")
          lable(for="stock") Số lượng
          input(
            type="number"
            class="form-control"
            id="stock"
            name="stock"
            value="0"
          )
        div(
          class="form-group"
          upload-image
          )
          lable(for="thumbnail") Ảnh

          button(
            type="button"
            id="cancel-image"
            style="margin-left:100px"
          ) Huỷ chọn ảnh
        
          input(
            type="file"
            class="form-control-file"
            id="thumbnail"
            name="thumbnail"
            upload-img-input
                     
          )
          
          img(
            src=""
            class="upload-preview"
            upload-img-preview
          )
        div(class="form-group")
          lable(for="position") Vị trí
          input(
            type="number"
            class="form-control"
            id="position"
            name="position"
            min="1"
            placeholder="Tự động tăng"
          )
        div(class="form-group form-check form-check-inline")
          input(
            type="radio"
            class="form-check-input"
            id="statusActive"
            name="status"
            value="active"
            checked
          )
          label(for="statusActive" class="form-check-label") Hoạt động 
        
        div(class="form-group form-check form-check-inline")
          input(
            type="radio"
            class="form-check-input"
            id="statusInactive"
            name="status"
            value="inactive"
          )
          label(for="statusActive" class="form-check-label") Dừng hoạt động 

        div(class="form-group")
          button(type="submit" class="btn btn-primary") Tạo sản phẩm


    script(src="/admin/js/product.js") 