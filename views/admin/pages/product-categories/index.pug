extends ../../layouts/default.pug
include ../../mixins/button-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/table-tree.pug
block main 
  h1 Danh mục sản phẩm

  card.mb-3 
    .card-header Lọc và Tìm kiếm 
      .card-body
        .row 
          .col-6
            +button-status(fillterStatus)
          .col-6 
            +search(keyword)

  card.mb-3 
    .card-header Tính năng 
      .card-body
        .row 
          .col-4 
            a(href=`${prefixAdmin}/product-categories/create` class="btn btn-primary") + Thêm danh mục sản phẩm mới

  card.mb-3
    .card-header Sắp xếp 
      .card-body 
        .row 
          .col-4 
            div(sort)
              select(
                class="form-control"
                name="sort"
                sort-select
              )
                option(value="position-desc") Vị trí giảm dần
                option(value="position-asc") Vị trí tăng  dần
                option(value="title-desc") Tiêu đề từ A - Z
                option(value="title-asc") Tiêu đề từ Z - A

              button(class="btn btn-danger"
                      sort-clear) Clear

  card.mb-3 
    .card-body
      table.table 
        thead 
          tr 
            th STT
            th Hình ảnh
            th Tiêu đề
            th Vị trí
            th Trạng thái
            th Hành động
        
        tbody
          +table-tree(productCategories, 0)
  form(
    action=""
    method="POST"
    id="form-delete-item"
    data-path= `${prefixAdmin}/product-categories/delete`
    )      
  script(src="/admin/js/product.js") 