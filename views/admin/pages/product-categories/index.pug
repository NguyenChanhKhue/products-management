extends ../../layouts/default.pug
include ../../mixins/button-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug

block main 
  h1 Danh sách sản phẩm

  card.mb-3 
    .card-header Lọc và Tìm kiếm 
      .card-body
        .row 
          .col-6
            +button-status(fillterStatus)
          .col-6 
            +search(keyword)

  card.mb-3 
    .card-header Tính năng 
      .card-body
        .row 
          .col-4 
            a(href=`${prefixAdmin}/product-categories/create` class="btn btn-primary") + Thêm sản phẩm mới

  card.mb-3
    .card-header Sắp xếp 
      .card-body 
        .row 
          .col-4 
            div(sort)
              select(
                class="form-control"
                name="sort"
                sort-select
              )
                option(value="position-desc") Vị trí giảm dần
                option(value="position-asc") Vị trí tăng  dần
                option(value="title-desc") Tiêu đề từ A - Z
                option(value="title-asc") Tiêu đề từ Z - A

              button(class="btn btn-danger"
                      sort-clear) Clear

  card.mb-3 
    .card-body
      table.table 
        thead 
          tr 
            th STT
            th Hình ảnh
            th Tiêu đề
            th Vị trí
            th Trạng thái
            th Hành động
        
        tbody
          each item , index in productCategories 
            tr 
              td #{index+1}
              td
                img(src=item.thumbnail
                alt=item.title
                width="100px"
                height="auto"
                )
                
              td #{item.title}
              td
                input(
                  type="number"
                  value= item.position
                  style="width: 60px"
                  min = 1
                  name="position"
                  )
              td 
                if(item.status == "active")
                  a( 
                    href="javascript:;" 
                    data-status=item.status
                    data-id = item.id
                    button-change-status
                    class="badge badge-success"

                    )  Hoạt động
                else 
                  a(
                    href="javascript:;"
                    data-status=item.status
                    data-id = item.id
                    button-change-status
                    class="badge badge-danger"
                    ) Dừng hoạt động 
                
              td
                a(
                  href=`${prefixAdmin}/product-categories/detail/${item.id}`
                  class="btn btn-secondary"
                  style="margin-right:10px"                 
                  ) Chi tiết
                a(
                  href=`${prefixAdmin}/product-categories/edit/${item.id}`
                  class="btn btn-warning"
                  style="margin-right:10px"                 
                  ) Sửa
                button(class="btn btn-danger" 
                      button-delete
                      data-id = item.id) Xoá
  script(src="/admin/js/product.js") 