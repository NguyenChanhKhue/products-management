extends ../../layouts/default.pug
include ../../mixins/tree-categories
block main 
    h1(class="mb-4") Thêm mới danh mục sản phẩm 
    form(
        action=`${prefixAdmin}/product-categories/create`
        method="POST"
        enctype="multipart/form-data"
        )
        div(class="form-group")
          lable(for="title") Tiêu đề
          input(
            type="text"
            class="form-control"
            id="title"
            name="title"
            required
          )
        div(class="form-group")
          lable(for="parent_id") Danh mục cha
          select(
            name="parent_id"
            id="parent_id"
            class="form-control"
          )
            option(
              value=""
            ) -- Chọn danh mục cha --
            if(records)
              +tree-categories(records)
        div(class="form-group")
          lable(for="desc") Mô tả
          textarea(
            type="text"
            class="form-control textarea-mce"
            id="desc"
            name="description"
          )
        div(
          class="form-group"
          upload-image
          )
          lable(for="thumbnail") Ảnh

          button(
            type="button"
            id="cancel-image"
            style="margin-left:100px"
          ) Huỷ chọn ảnh
        
          input(
            type="file"
            class="form-control-file"
            id="thumbnail"
            name="thumbnail"
            upload-img-input        
          )
          
          img(
            src=""
            class="upload-preview"
            upload-img-preview
          )
        div(class="form-group")
          lable(for="position") Vị trí
          input(
            type="number"
            class="form-control"
            id="position"
            name="position"
            min="1"
            placeholder="Tự động tăng"
          )
        div(class="form-group form-check form-check-inline")
          input(
            type="radio"
            class="form-check-input"
            id="statusActive"
            name="status"
            value="active"
            checked
          )
          label(for="statusActive" class="form-check-label") Hoạt động 
        
        div(class="form-group form-check form-check-inline")
          input(
            type="radio"
            class="form-check-input"
            id="statusInactive"
            name="status"
            value="inactive"
          )
          label(for="statusActive" class="form-check-label") Dừng hoạt động 

        div(class="form-group")
          button(type="submit" class="btn btn-primary") Tạo sản phẩm


    script(src="/admin/js/product.js") 